
@{/* Key for SSR to work */}
@addTagHelper *, Microsoft.AspNetCore.SpaServices

@{
    ViewData["Title"] = "Login";

    dynamic prerenderData = new
    {
    };


#if DEBUG
    // Run the local debug version
    string jsClientFilename="/js/main-client-debug.js";
    string jsServerFilename="Server/main-server-debug";
#else
    // Run the one in github
    string jsClientFilename="https://raw.githubusercontent.com/sidfishus/react-spa-demo/master/wwwroot/js/main-client.js";
    //sidtodo test
    string jsServerFilename="https://raw.githubusercontent.com/sidfishus/react-spa-demo/master/wwwroot/js/main-server.js";
#endif
}

<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css" />
<link rel="stylesheet" href="/css/carousel.min.css"/>

<html>
    <body>

        <div id="react" asp-prerender-module="@jsServerFilename" asp-prerender-data="prerenderData"></div>

        @{
            string ssrOnly=Environment.GetEnvironmentVariable("SSR_Only");
            if(ssrOnly == null || ssrOnly=="0")
            {
                <script src=@jsClientFilename></script>
            }
        }

    </body>
</html>